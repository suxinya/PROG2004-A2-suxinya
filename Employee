public abstract class Employee extends Person {
    // Private unique variables
    private String employeeId; // Unique Employee ID
    private String position;   // position

    // 1. Default constructor: Need to call the parent class's default constructor
    public Employee() {
        super(); // Implicit call, can be omitted, but explicit writing is clearer
    }

    // 2. Constructor with parameters: Initialize parent class properties+subclass unique properties
    public Employee(String personId, String name, int age, String employeeId, String position) {
        // Call parent class with parameter construction: Initialize common properties
        super(personId, name, age);
        this.employeeId = employeeId;
        this.position = position;
    }

    // 3. Getter/Setter: subclass specific variables
    public String getEmployeeId() {
        return employeeId;
    }

    public void setEmployeeId(String employeeId) {
        this.employeeId = employeeId;
    }

    public String getPosition() {
        return position;
    }

    public void setPosition(String position) {
        this.position = position;
    }

     // Abstract method for implementing Person: displaying employee information
    @Override
    public void showInfo() {
        System.out.println("=== employee information ===");
        System.out.println("Employee ID:" + getEmployeeId());
        System.out.println("Name:" + getName());
        System.out.println("Age:" + getAge());
        System.out.println("Position:" + getPosition());
    }
}
